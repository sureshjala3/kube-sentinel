# General Configuration
PORT=8080
HOST=
# Base path for the application, e.g. /kube-sentinel
KUBE_SENTINEL_BASE=

# Security
# Secret key for JWT signing. Change this in production!
JWT_SECRET=kube-sentinel-default-jwt-secret-key-change-in-production
# Encryption key for sensitive data. Change this in production!
KUBE_SENTINEL_ENCRYPT_KEY=kube-sentinel-default-encryption-key-change-in-production

# Initial Super User
# If these are set, a super user will be created on startup if no users exist.
KUBE_SENTINEL_USERNAME=admin
KUBE_SENTINEL_PASSWORD=admin

# Database Configuration
# Supported types: sqlite, mysql, postgres
DB_TYPE=sqlite
# DSN for the database connection.
# For sqlite: path/to/db.sqlite
# For mysql/postgres: user:password@tcp(host:port)/dbname
DB_DSN=dev.db

# Kubernetes
# Path to Kubeconfig file for initial cluster import.
# If KUBECONFIG is not set, it defaults to ~/.kube/config
KUBECONFIG=

# Node Terminal
NODE_TERMINAL_IMAGE=busybox:latest

# GitLab Configuration
# Comma-separated list of GitLab hosts
GITLAB_HOSTS=

# Feature Flags
DISABLE_GZIP=false
DISABLE_VERSION_CHECK=false
INSECURE_SKIP_VERIFY=false
